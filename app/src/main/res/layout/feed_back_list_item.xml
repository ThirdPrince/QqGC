<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dimen_10dp"
    android:layout_marginLeft="@dimen/dimen_10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/touxiang"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dimen_12dp"
        android:layout_marginRight="@dimen/dimen_12dp"
        android:paddingBottom="@dimen/dimen_10dp"
        >


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_5dp"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/feed_owner_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="反馈人"
                android:textColor="@color/m_font_color_normal"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:minWidth="80dp"
                android:text="时间"
                android:textColor="@color/m_font_color_normal"
                android:textSize="15sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/edit_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:drawableLeft="@drawable/edit_account"
            />

        </RelativeLayout>


    <RelativeLayout
        android:id="@+id/account_type_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:minWidth="80dp"
            android:text="@string/account_type"
            android:textColor="@color/m_font_color_normal"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/account_type_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:drawablePadding="@dimen/dimen_5dp"
            android:paddingRight="13dip"
            android:textColor="@color/black"
            android:textColorHint="@color/m_grey_bgcolor_light"
            android:textSize="15sp"/>
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:minWidth="80dp"
            android:text="@string/account_nick"
            android:textColor="@color/m_font_color_normal"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/account_nick_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:drawablePadding="@dimen/dimen_5dp"
            android:paddingRight="13dip"
            android:textColor="@color/black"
            android:textColorHint="@color/m_grey_bgcolor_light"
            android:textSize="15sp"/>
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:minWidth="80dp"
            android:text="@string/account_id"
            android:textColor="@color/m_font_color_normal"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/account_id_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:drawablePadding="@dimen/dimen_5dp"
            android:paddingRight="13dip"
            android:textColor="@color/black"
            android:textColorHint="@color/m_grey_bgcolor_light"
            android:textSize="15sp"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/feed_back_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:src="@drawable/feed_back"
        android:layout_marginTop="@dimen/dimen_10dp"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dip"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:background="@color/m_divider_line_color"/>

    </LinearLayout>
</LinearLayout>
