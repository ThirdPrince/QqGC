<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tool_bar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:popupTheme="@style/AppTheme"
    android:background="@drawable/topbar_gradient_bg">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:src="@drawable/dk_back"/>

        <LinearLayout
            android:background="@drawable/search_top_round"
            android:orientation="horizontal"
            android:layout_marginEnd="@dimen/dimen_5dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:paddingLeft="@dimen/dimen_10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimen_5dp"
                android:src="@drawable/sousuo"/>

            <com.yq.news.view.ClearEditText
                android:id="@+id/text_search"
                android:gravity="center_vertical"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                android:textColorHint="@color/white"
                android:background="@null"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:layout_height="35dp"/>
            <View
                android:id="@+id/line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_toLeftOf="@id/search_tv"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:background="#B5BABD"/>
            <TextView
                android:id="@+id/search_tv"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="搜索"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
</android.support.v7.widget.Toolbar>
