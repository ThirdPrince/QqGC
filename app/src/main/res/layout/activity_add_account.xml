<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/m_body_bgcolor_grey"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    >

    <include
        layout="@layout/top_toolbar_left"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        >

    <RelativeLayout
        android:id="@+id/account_type_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:minWidth="80dp"
            android:text="@string/account_type"
            android:textColor="@color/m_font_color_normal"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/account_tv"
            android:layout_width="match_parent"
            android:layout_height="47.5dp"
            android:layout_alignParentRight="true"
            android:gravity="end|center_vertical"
            android:drawableRight="@drawable/arrow"
            android:drawablePadding="@dimen/dimen_5dp"
            android:text="@string/account_select"
            android:paddingRight="13dip"
            android:textColor="@color/black"
            android:textColorHint="@color/m_grey_bgcolor_light"
            android:textSize="15sp"/>
    </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dip"
            android:background="@color/m_divider_line_color"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       >

        <TextView
            android:id="@+id/account_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:minWidth="80dp"
            android:text="@string/account_id"
            android:textColor="@color/m_font_color_normal"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dip"
            android:layout_toRightOf="@id/account_id_tv"
            android:orientation="vertical">

            <EditText
                android:id="@+id/account_id_et"
                android:layout_width="match_parent"
                android:layout_height="47.5dp"
                android:layout_marginBottom="-13dp"
                android:background="@null"
                android:hint="@string/account_input"
                android:maxLength="32"
                android:gravity="end|center_vertical"
                android:paddingRight="13dip"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/m_grey_bgcolor_light"
                android:textSize="15sp"/>
        </LinearLayout>
    </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dip"
            android:background="@color/m_divider_line_color"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
      >

        <TextView
            android:id="@+id/account_nick_tv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:minWidth="80dp"
            android:text="@string/account_nick"
            android:textColor="@color/m_font_color_normal"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dip"
            android:layout_toRightOf="@id/account_nick_tv"
            android:orientation="vertical">

            <EditText
                android:id="@+id/account_nick_et"
                android:layout_width="match_parent"
                android:layout_height="47.5dp"
                android:layout_marginBottom="-13dp"
                android:background="@null"
                android:hint="@string/account_input"
                android:maxLength="32"
                android:gravity="end|center_vertical"
                android:paddingRight="13dip"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/m_grey_bgcolor_light"
                android:textSize="15sp"/>
        </LinearLayout>
    </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dip"
            android:background="@color/m_divider_line_color"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/account_owner_tv"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:minWidth="80dp"
                android:text="@string/account_owner"
                android:textColor="@color/m_font_color_normal"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dip"
                android:layout_toRightOf="@id/account_owner_tv"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/account_owner_et"
                    android:layout_width="match_parent"
                    android:layout_height="47.5dp"
                    android:layout_marginBottom="-13dp"
                    android:background="@null"
                    android:hint="@string/account_input"
                    android:maxLength="32"
                    android:gravity="end|center_vertical"
                    android:paddingRight="13dip"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/m_grey_bgcolor_light"
                    android:textSize="15sp"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dip"
            android:background="@color/m_divider_line_color"/>
    </LinearLayout>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        fancy:fb_textSize = "16sp"
        android:layout_margin="12dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        fancy:fb_borderColor="@color/white"
        android:background="@drawable/round_btn"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="@color/binding"
        fancy:fb_focusColor="@color/binding"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="5dp"
        fancy:fb_text="保存"
        fancy:fb_textColor="@color/white" />
</LinearLayout>