<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/m_font_color_normal"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:textSize="17sp"
        android:text="字体大小"/>
    <RelativeLayout
        android:id="@+id/font_small"
        android:background="@drawable/bg_dialog"
        android:padding="@dimen/dimen_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/m_font_color_normal"
            android:textSize="15sp"
            android:text="小号字体"/>

        <RadioButton
            android:id="@+id/font_small_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>


    <RelativeLayout

        android:gravity="center"
        android:id="@+id/font_standard"
        android:background="@drawable/bg_dialog"
        android:padding="@dimen/dimen_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/m_font_color_normal"
            android:textSize="17sp"
            android:text="标准字体"/>

        <RadioButton
            android:id="@+id/font_standard_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/font_big"
        android:gravity="center"
        android:background="@drawable/bg_dialog"
        android:padding="@dimen/dimen_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/m_font_color_normal"
            android:textSize="19sp"
            android:text="大号字体"/>

        <RadioButton
            android:id="@+id/font_big_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/font_super_big"
        android:gravity="center"
        android:background="@drawable/bg_dialog"
        android:padding="@dimen/dimen_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/m_font_color_normal"
            android:textSize="21sp"
            android:text="超大号字体"/>

        <RadioButton
            android:id="@+id/font_super_big_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

</LinearLayout>