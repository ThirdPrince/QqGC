<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="toolBar"  parent="Base.Widget.AppCompat.Toolbar">>
        <item name="colorControlNormal">#ffffff</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_black_24dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>

    </style>
    <style name="TaskAppTheme" parent="Base.AppTheme">

    </style>
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SplashActivityTheme" parent="ActivityTheme">

        <item name="colorPrimary">#1F47F1</item>
        <item name="colorPrimaryDark">#1F47F1</item>
        <item name="android:windowBackground">@color/colorSplash</item>


        <!-- Customize your theme here. -->
      <!--  <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>-->
    </style>

    <style name="DeepLinkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="GestureTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.NoBackgroundAndTitleMain" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!-- Pad版更多导航 -->
    <style name="MineFragmentIndex">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:drawableRight">@drawable/mine_arrow</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/m_font_color_normal</item>
        <item name="android:textSize">@dimen/font_size_maintitle</item>
    </style>

    <style name="MyTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:drawableRight">@drawable/mine_arrow</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/m_font_color_normal</item>
        <item name="android:textSize">@dimen/font_size_maintitle</item>
    </style>


    <style name="Remember_CheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlNormal">@color/gray</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <style name="SwitchCompat.Control" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorSwitchThumbNormal">@color/colorAccent</item>
        <item name="android:colorForeground">@color/colorAccent</item>
    </style>

    <style name="SwitchCompat.Text" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">9dp</item>
    </style>

    <style name="SwitchStyle" parent="AppTheme">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- WW代表宽高为wrap_content，wrap_content -->
    <style name="WW">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageView_WW" >-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="ImageView_Main_Page" >-->
        <item name="android:layout_width">112dp</item>
        <item name="android:layout_height">69dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!--设置TabLayout内文字的字体大小-->
    <style name="MyTabLayoutTextAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="news_text_style">
        <item name="android:textColor">@color/color_create_time</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0.0dip</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="news_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">17sp</item>
    </style>


    <style name="dialogSlideAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_slide_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_slide_out</item>
    </style>

    <style name="OverFlowMenuTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="overlapAnchor">false</item>
    </style>

    <style name="MainPageTV">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_989898</item>
        <item name="android:textSize">@dimen/main_page_txt_sp</item>
    </style>
    <style name="MainPageTV_Time">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_333</item>
        <item name="android:textSize">@dimen/main_page_txt_sp</item>
    </style>

    <!--任务详情 左边 任务开始时间style-->
    <style name="task_info_left_tv">
        <item name="android:layout_width">@dimen/dimen_100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_999</item>
        <item name="android:textSize">@dimen/task_info_sp</item>
    </style>
    <!--任务详情 右边 时间 导控数量 黑色style-->
    <style name="task_info_right_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_32</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_333</item>
        <item name="android:textSize">@dimen/main_page_txt_sp</item>
    </style>
    <style name="task_info_linear">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/dimen_5dp</item>

    </style>

    <style name="room_num_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>

    </style>
</resources>
